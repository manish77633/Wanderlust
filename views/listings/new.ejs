<% layout("layouts/boilerplate") %>

  <div class="container my-5">
    <h1 class="text-center mb-4">Create New Listing</h1>
    <form action="/listings" method="POST" novalidate
      class="listing-form mx-auto p-4 rounded shadow bg-light needs-validation" enctype="multipart/form-data">

      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" id="title" name="listing[title]" class="form-control" placeholder="Title" required>
        <div class="valid-feedback">
          Title Looks good!
        </div>
        <div class="invalid-feedback">Please provide a Title!</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="listing[description]" class="form-control " rows="4" placeholder="Description"
          required></textarea>
        <div class="invalid-feedback">Please enter a short description!</div>

      </div>

      <!-- Image URL -->
      <!-- <div class="mb-3">
      <label for="image" class="form-label">Image URL</label>
      <input type="text" id="image" name="listing[image]" class="form-control" placeholder="Image URL" >
      <div class="valid-feedback">Image looks good</div>
    </div> -->
      <!-- Image file -->
      <div class="mb-3">
        <label for="image" class="form-label">Choose Image</label>
        <input required type="file" id="image" name="listing[image]" class="form-control" placeholder="Image URL">
        <div class="valid-feedback">Image looks good</div>
      </div>

      <!-- Price & Location in one row -->
      <div class="row mb-3">
        <div class="col-md-6 mb-3 mb-md-0">
          <label for="price" class="form-label">Price</label>
          <input id="price" name="listing[price]" class="form-control" placeholder="Price" required>
          <div class="invalid-feedback">Price should be valid!</div>
        </div>
        <div class="col-md-6">
          <label for="location" class="form-label">Location</label>
          <input type="text" id="location" name="listing[location]" class="form-control" placeholder="Location"
            required>
          <div class="invalid-feedback">Location should be valid!</div>

        </div>
      </div>

      <!-- Country -->
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input type="text" id="country" name="listing[country]" class="form-control" placeholder="Country" required>
        <div class="invalid-feedback">Country should be valid!</div>

      </div>

      <!-- Category -->
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select id="category" name="listing[category]" class="form-control" required>
          <option value="">Select Category</option>
          <option value="Trending">Trending</option>
          <option value="Adventure">Adventure</option>
          <option value="Nature">Nature</option>
          <option value="City">City</option>
          <option value="Beach">Beach</option>
          <option value="Relax">Relax</option>
          <option value="Sports">Sports</option>
          <option value="Food">Food</option>
          <option value="Nightlife">Nightlife</option>
          <option value="Favorites">Favorites</option>
        </select>
        <div class="invalid-feedback">Please select a category!</div>
      </div>



      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn btn-lg btn-airbnb">Create Listing</button>
      </div>

    </form>
  </div>