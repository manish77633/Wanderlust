<% layout("layouts/boilerplate") %>

<div class="container mt-5 d-flex justify-content-center">
  <div class="card signup-card shadow-lg border-0" style="width: 50%; max-width: 600px;">
    <div class="card-body p-4">
      <h3 class="text-center mb-3 fw-bold text-uppercase" style="font-family: 'Poppins', sans-serif;">
        Signup on Wanderlust 
      </h3>
      <p class="text-center text-muted mb-4">
        Create your account and unlock curated journeys ✦
      </p>

      <!-- ✅ enctype added for Cloudinary image upload -->
      <form action="/signup" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>

        <!-- ✅ Profile Image Upload -->
        <div class="mb-4 text-center">
          <label for="profileImage" class="form-label fw-semibold">Profile Picture</label>
          <div class="d-flex flex-column align-items-center">
            <img id="previewImg" 
                 src="https://cdn-icons-png.flaticon.com/512/847/847969.png"
                 alt="Profile Preview"
                 class="rounded-circle mb-2 shadow-sm"
                 style="width: 100px; height: 100px; object-fit: cover; border: 2px solid #ddd;">
            
            <input type="file" id="profileImage" name="profileImage" 
                   accept="image/*" class="form-control w-75 mt-2"
                   onchange="previewFile()">
            <div class="form-text text-muted">Optional — you can add later too.</div>
          </div>
        </div>

        <!-- Username -->
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" id="username" name="username" class="form-control"
                 placeholder="e.g. manish" required maxlength="30">
          <div class="invalid-feedback">Please provide a username!</div>
        </div>

        <!-- Email -->
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" class="form-control"
                 placeholder="you@domain.com" required>
          <div class="invalid-feedback">Please enter a valid email!</div>
        </div>

        <!-- Password -->
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <div class="input-group">
            <input type="password" id="password" name="password" class="form-control"
                   placeholder="Enter a strong password" required minlength="6">
            <button type="button" class="btn btn-outline-secondary" id="togglePassword">Show</button>
            <div class="invalid-feedback">Password must be at least 6 characters!</div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="d-grid mt-4">
          <button type="submit" class="btn btn-success fw-semibold">Create Account</button>
        </div>

        <p class="text-center mt-3 mb-0 text-muted">
          Already have an account? <a href="/login" class="fw-semibold text-decoration-none">Login</a>
        </p>
      </form>
    </div>
  </div>
</div>

<!-- ✅ JS for Image Preview + Password Toggle -->
<script>
  document.getElementById('togglePassword').addEventListener('click', function () {
    const passwordField = document.getElementById('password');
    if (passwordField.type === 'password') {
      passwordField.type = 'text';
      this.textContent = 'Hide';
    } else {
      passwordField.type = 'password';
      this.textContent = 'Show';
    }
  });

  function previewFile() {
    const preview = document.getElementById('previewImg');
    const file = document.getElementById('profileImage').files[0];
    const reader = new FileReader();
    reader.addEventListener("load", function () {
      preview.src = reader.result;
    }, false);
    if (file) reader.readAsDataURL(file);
  }
</script>
