<% layout("layouts/boilerplate") %>

<% 
  // FINAL CRITICAL SAFETY CHECK: Prevents "properties is not defined" error.
  const userProperties = (typeof properties !== 'undefined') ? properties : []; 
%>

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">My Listed Properties üè†</h1>
        <p class="text-muted">Properties you currently manage and offer to the world.</p>
    </div>

    <% if (userProperties.length > 0) { %>
        <div class="row g-4">
            <% userProperties.forEach(listing => { %>
                <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3 my-properties-card">
                    <div class="card listing-card h-100 shadow-sm">
                        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
                            <img 
                                src="<%= listing.image.url %>" 
                                class="card-img-top" 
                                alt="<%= listing.title %>"
                                style="height: 18rem; object-fit: cover;"
                            />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-truncate mb-1">
                                    <%= listing.title %>
                                </h5>
                                <p class="card-text text-muted small mb-2">
                                    <i class="fa-solid fa-location-dot me-1"></i> <%= listing.location %>, <%= listing.country %>
                                </p>
                                
                                <p class="card-text mb-2 flex-grow-1">
                                    <%= listing.description.substring(0, 70) %>...
                                </p>

                                <p class="card-text fw-bold mt-auto mb-2">
                                    &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                                </p>

                                <div class="d-flex justify-content-between mt-2">
                                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-sm btn-primary flex-fill me-1">
                                        <i class="fa-solid fa-pen-to-square"></i> Edit
                                    </a>
                                    
                                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline flex-fill ms-1">
                                        <button class="btn btn-sm btn-danger w-100">
                                            <i class="fa-solid fa-trash-can"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="text-center mt-5 p-5 border rounded-4 bg-white shadow-sm">
            <h3 class="text-secondary mb-3">You haven't listed any properties yet!</h3>
            <p>Start your hosting journey now.</p>
            <a href="/listings/new" class="btn btn-airbnb mt-3 px-4 py-2">
                <i class="fa-solid fa-circle-plus me-2"></i> List Your First Property
            </a>
        </div>
    <% } %>
</div>