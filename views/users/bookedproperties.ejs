<% layout("layouts/boilerplate") %>
<div class="container my-5">

    <!-- Page Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-gradient">My Confirmed Bookings üíö</h1>
        <p class="text-muted fs-5">Your next adventures are booked and waiting!</p>
    </div>

    <!-- Bookings List -->
    <% if (bookings && bookings.length > 0) { %>
        <div class="row g-4 justify-content-center">
            <% bookings.forEach(listing => { %>
                <div class="col-12 col-sm-6 col-md-6 col-lg-4">
                    <div class="card booked-card-style h-100 shadow-lg border-0 rounded-4 overflow-hidden">

                        <!-- Listing Image & Badge -->
                        <a href="/listings/<%= listing._id %>" class="text-decoration-none">
                            <div class="position-relative">
                                <img 
                                    src="<%= listing.image.url %>" 
                                    alt="<%= listing.title %>" 
                                    class="card-img-top"
                                >
                                <span class="badge bg-success position-absolute top-0 end-0 m-3 fw-bold px-3 py-2 shadow">
                                    CONFIRMED
                                </span>
                            </div>
                        </a>

                        <!-- Card Body -->
                        <div class="card-body d-flex flex-column bg-glass p-4">
                            <h5 class="card-title text-truncate fw-bold mb-2 fs-5">
                                <%= listing.title %>
                            </h5>
                            <p class="card-text text-muted small mb-2">
                                <i class="fa-solid fa-location-dot me-1 text-primary"></i>
                                <%= listing.location %>, <%= listing.country %>
                            </p>
                            <p class="card-text fw-bold fs-5 text-success mb-3">
                                &#8377; <%= listing.price.toLocaleString("en-IN") %>
                            </p>

                            <!-- Buttons: Same Line & Center -->
<div class="booking-btns">
    <a href="/listings/<%= listing._id %>" class="btn btn-view rounded-pill fw-semibold">
        View Details
    </a>

    <form action="/profile/bookings/<%= listing._id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-cancel rounded-pill fw-semibold">
            Cancel Booking ‚ùå
        </button>
    </form>
</div>


                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <!-- No Bookings Message -->
        <div class="text-center mt-5 p-5 border rounded-4 bg-white shadow-sm">
            <h3 class="text-secondary mb-3">You haven't booked any properties yet!</h3>
            <p class="fs-5">Find your perfect getaway and confirm your first booking.</p>
            <a href="/listings" class="btn btn-gradient mt-3 px-4 py-2 rounded-pill">
                <i class="fa-solid fa-plane-departure me-2"></i> Explore Listings
            </a>
        </div>
    <% } %>

</div>
